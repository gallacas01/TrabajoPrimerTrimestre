<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/dLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.detail.DetailFragment"
    android:background="@color/verdeClarito"
    android:padding="5dp">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/dTituloReceta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:background="@drawable/rounded_corner"
                android:gravity="center"
                android:lines="2"
                android:padding="4dp"
                android:text="TÍTULO DE LA RECETA QUE OCUPA DOS LÍNEAS"
                android:textColor="@color/white"
                android:textSize="30dp" />

            <ImageView
                android:id="@+id/dImagenReceta"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_margin="4dp"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/tiempoPreparacion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:background="@drawable/rounded_corner"
                android:gravity="center"
                android:padding="8dp"
                android:text="Tiempo de preparación: "
                android:textColor="@color/white"
                android:textSize="25dp" />

            <TextView
                android:id="@+id/numComensales"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:background="@drawable/rounded_corner"
                android:gravity="center"
                android:padding="8dp"
                android:text="Número de comensales:  "
                android:textColor="@color/white"
                android:textSize="25dp" />

            <Button
                android:id="@+id/buttonEnlaceReceta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="VER Receta"
                android:textSize="26dp" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/floatingActionButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:src="@drawable/ic_baseline_favorite_border_24"
                app:layout_anchorGravity="bottom|right" />/>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>